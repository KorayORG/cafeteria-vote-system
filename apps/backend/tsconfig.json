{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],           // ⬅️ DOM YOK
    "types": ["node"],           // ⬅️ yalnız node tipleri
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,        // ⬅️ node_modules tip uyuşmazlıklarını yok say
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist", "test"]  // ⬅️ testleri derleme dışı bırak
}
